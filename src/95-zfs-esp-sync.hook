# This should execute after the default 90-linux*.hook

[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Package
Target = linux
Target = linux-lts
Target = intel-ucode

[Action]
Description = Copying kernel images to ESP and generating EFI scripts
When = PostTransaction
Exec = /usr/share/libalpm/scripts/zfs-esp-sync
